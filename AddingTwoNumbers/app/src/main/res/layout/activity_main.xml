<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:backgroundTint="@color/white"
    app:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/TVId"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="First Number"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/FirstNumber"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toRightOf="@id/TVId"
        />

    <TextView
        android:id="@+id/TVId2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TVId"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Second Number"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/SecondNumber"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/FirstNumber"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toRightOf="@id/TVId"
        />

    <TextView
        android:id="@+id/PResult"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SecondNumber"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/TResult"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TResult"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TVId2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Result "
        android:textSize="20sp"
        android:textStyle="bold" />




    <Button
        android:id="@+id/Add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="450dp"
        android:text="Add"

        />






</RelativeLayout>