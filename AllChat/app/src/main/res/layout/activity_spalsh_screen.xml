<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/splashScreenImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/splashFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developed_with_love"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_above="@+id/splashSecondLine"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/splashSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/shabaj_ansari"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/main_theme"
        android:textStyle="bold"/>

</RelativeLayout>